@model List<DoneIt.EntityLayer.TaskItem>

@{
    ViewBag.Title = "Görev Listesi";
}

<div class="d-flex justify-content-between align-items-center mt-4 mb-3">
    <h2 class="text-center flex-grow-1 m-0">Görev Listesi</h2>
    <a href="/TaskItem/Add" class="btn btn-success ms-3 shadow-sm" style="min-width:180px; font-weight:500;">+ Yeni Etkinlik Ekle</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Tarih</th>
            <th>Kategori</th>
            <th>Tamamlandı mı?</th>
            <th>Bitiş Tarihi</th>
            <th>Sil</th>
            <th>Durumu Değiştir</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TaskID</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.Category</td>
                <td>@(item.IsCompleted ? "Evet" : "Hayır")</td>
                <td>@item.Deadline.ToShortDateString()</td>
                <td>
                    <a href="/TaskItem/Delete/@item.TaskID"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('Bu görevi silmek istediğinizden emin misiniz?');">
                        Sil
                    </a>
                </td>
                <td>
                    <a href="/TaskItem/ToggleStatus/@item.TaskID"
                       class="btn btn-warning btn-sm">
                        Durumu Değiştir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
