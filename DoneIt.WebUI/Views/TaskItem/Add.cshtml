@model DoneIt.EntityLayer.TaskItem

@{
    ViewBag.Title = "Yeni Görev Ekle";
}

<h2 class="mt-3 mb-3 text-center">Yeni Görev Ekle</h2>

<form method="post" class="w-50 mx-auto">
    <div class="mb-3">
        <label>Başlık</label>
        <input type="text" name="Title" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Açıklama</label>
        <textarea name="Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label>Kategori</label>
        <input type="text" name="Category" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Bitiş Tarihi</label>
        <input type="date" name="Deadline" class="form-control" />
    </div>
    <div class="mb-3 form-check">
        <input type="checkbox" name="IsCompleted" class="form-check-input" />
        <label class="form-check-label">Tamamlandı</label>
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
</form>